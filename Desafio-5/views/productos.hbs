{{#> body }}
<h2 style="color:crimson;">Lista de Productos</h2>

    {{ #if productos }}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> 
                <th>Producto</th>
                <th>Precio</th> 
                <th>Imagen</th> 
            </tr>
            {{#each productos}}
            <tr>
                <td>
                    {{this.nombre-producto}}
                </td>
                <td>
                    {{this.precio}}
                </td>
                <td>
                    {{this.URL-imagen}}
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{ else }}
    <h3 class="alert alert-danger">No hay Productos</h1>
    {{/if}}
{{ /body }}